<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Get Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAuthLogin" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paste Code Here"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="text"
            android:id="@+id/yahooCode"/>
    <Button
            android:text="Start App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="501dp"
            tools:layout_editor_absoluteX="137dp" android:id="@+id/startRequests"
            app:layout_constraintTop_toBottomOf="@id/buttonAuthLogin"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="36dp"
            tools:layout_editor_absoluteX="78dp" android:id="@+id/testText"/>
</android.support.constraint.ConstraintLayout>